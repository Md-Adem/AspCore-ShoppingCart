@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Roles";
}

<h1>Roles</h1>

<p>
    <a asp-action="CreateRoles" class="btn btn-primary">Create New</a>
</p>
<partial name="_NotificationPartial" />
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Role
            </th>
            <th>
                Users
            </th>
            <th>
                
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>
                    @role.Id
                </td>
                <td>
                    @role.Name
                </td>
                <td user-role="@role.Id"> <span class="badge bg-info text-dark"></span></td>
                <td>
                    <a asp-action="EditRoles" asp-route-id="@role.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@role.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
