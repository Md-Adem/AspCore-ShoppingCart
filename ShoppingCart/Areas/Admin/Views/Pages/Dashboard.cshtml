
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid pt-5">
    <div class="row px-xl-9 pb-3">
        <div class="col-lg-4 col-md-6 col-sm-12 pb-1">
            <div class="d-flex align-items-center border mb-4" style="padding: 30px;">
                <h1 class="fa fa-check text-primary m-0 mr-3"></h1>
                <h5 class="font-weight-semi-bold m-0">Total Products <span class="badge badge-warning">@ViewBag.TotalProducts</span></h5>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 col-sm-12 pb-1">
            <div class="d-flex align-items-center border mb-4" style="padding: 30px;">
                <h1 class="fa fa-check text-primary m-0 mr-2"></h1>
                <h5 class="font-weight-semi-bold m-0">Total Categories <span class="badge badge-warning">@ViewBag.TotalCategories</span></h5>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 col-sm-12 pb-1">
            <div class="d-flex align-items-center border mb-4" style="padding: 30px;">
                <h1 class="fas fa-user-alt text-primary m-0 mr-3"></h1>
                <h5 class="font-weight-semi-bold m-0">Total Users <span class="badge badge-warning">@ViewBag.TotalUsers</span> </h5>
            </div>
        </div>
    </div>
</div>